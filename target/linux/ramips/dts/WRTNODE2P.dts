/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>

#include "WRTNODE2.dtsi"

/ {
	compatible = "mediatek,wrtnode2p", "mediatek,mt7628an-soc";
	model = "WRTnode2P";

	gpio-leds {
		compatible = "gpio-leds";

		indicator {
			label = "wrtnode:blue:indicator";
			gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
		};

		wled {
			label = "wrtnode:blue:wled";
			gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
		};
	}; 

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	pcm5102a: pcm5102a-codec {
		compatible = "ti,pcm5102a";
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "PCM5102-I2S";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&dailink0_master>;
		simple-audio-card,frame-master = <&dailink0_master>;

		simple-audio-card,cpu {
			sound-dai = <&i2s>;
		};

		dailink0_master: simple-audio-card,codec {
			sound-dai = <&pcm5102a>;
		};
	};

	/*sound {
		compatible = "mediatek,mt7620-pcm5102a";
		i2s-controller = <&i2s>;
		audio-codec = <&pcm5102a>;
	};*/
};

&i2c {
	pcf8575: gpio@27 {
		compatible = "nxp,pcf8574";
		reg = <0x27>;
		//interrupt-parent = <&gpio>;
		//interrupts = <11 IRQ_TYPE_EDGE_FALLING>;
		gpio-controller;
		#gpio-cells = <2>;
		//interrupt-controller;
		//#interrupt-cells = <2>;
	};
};

&uart1 {
	status = "disabled";
};

&uart2 {
	status = "disabled";
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "gpio";
			ralink,function = "gpio";
		};

		uart1 {
			ralink,group = "uart1";
			ralink,function = "gpio";
		};

		uart2 {
			ralink,group = "uart2";
			ralink,function = "gpio";
		};

		wled_an {
			ralink,group = "wled_an";
			ralink,function = "gpio";
		};

		pwm0 {
			ralink,group = "pwm0";
			ralink,function = "gpio";
		};

		pwm1 {
			ralink,group = "pwm1";
			ralink,function = "gpio";
		};

		p0led_an {
			ralink,group = "p0led_an";
			ralink,function = "p0led_an";
		};

		p1led_an {
			ralink,group = "p1led_an";
			ralink,function = "gpio";
		};

		p2led_an {
			ralink,group = "p2led_an";
			ralink,function = "gpio";
		};

		p3led_an {
			ralink,group = "p3led_an";
			ralink,function = "gpio";
		};

		p4led_an {
			ralink,group = "p4led_an";
			ralink,function = "gpio";
		};
	};
};
